# Environment Variables Template
# Copy this to .env and fill in your actual values
# For local development, you can leave EMAIL settings blank (uses console backend)

# ===== DATABASE =====
DATABASE_URL=sqlite:///db.sqlite3

# ===== EMAIL CONFIGURATION =====
# For development (optional - will print to console if not set)
# For production (REQUIRED for password reset emails)

# Email Backend (set this for production)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Gmail SMTP Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-char-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ===== SECURITY =====
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ===== OTHER SETTINGS =====
# Add other environment variables as needed
