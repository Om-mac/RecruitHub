# Environment Variables Template
# Copy this to .env and fill in your actual values
# For local development, you can leave EMAIL settings blank (uses console backend)

# ===== DATABASE =====
DATABASE_URL=sqlite:///db.sqlite3

# ===== DJANGO ADMIN SUPERUSER =====
# Create superuser automatically on deployment (Render)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@vakverse.com
DJANGO_SUPERUSER_PASSWORD=your-secure-password-here

# ===== DJANGO SETTINGS =====
SECRET_KEY=your-django-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ===== ADMIN URL PATH (Security through Obscurity) =====
# Custom admin URL path - change this to hide your admin panel from bots
# Example: ADMIN_URL_PATH=super-secret-admin-path
# Then access admin at: https://your-domain.com/super-secret-admin-path/
# Default: admintapdiyaom
ADMIN_URL_PATH=admintapdiyaom

# ===== CSRF PROTECTION =====
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://*.your-domain.com

# ===== EMAIL CONFIGURATION =====
# For development (optional - will print to console if not set)
# For production (REQUIRED for password reset emails)

# Email Backend (set this for production)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Gmail SMTP Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-char-app-password

# ===== RESEND API (Alternative email provider) =====
RESEND_API_KEY=your-resend-api-key-here
DEFAULT_FROM_EMAIL=noreply@vakverse.com
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ===== SECURITY =====
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ===== OTHER SETTINGS =====
# Add other environment variables as needed
