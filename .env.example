# Environment Variables Template
# Copy this to .env and fill in your actual values
# For local development, you can leave EMAIL settings blank (uses console backend)
# SECURITY: Never commit .env file with real credentials!

# ===== DATABASE =====
# SQLite for development, PostgreSQL for production
# Production example: postgres://user:password@host:5432/dbname
DATABASE_URL=sqlite:///db.sqlite3

# ===== DJANGO SETTINGS =====
# Generate a strong SECRET_KEY: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=CHANGE-ME-generate-50-char-random-string
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.example.com

# ===== DJANGO ADMIN SUPERUSER =====
# Create superuser automatically on deployment (Render)
# Use a strong password: min 12 chars, mixed case, numbers, symbols
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@your-domain.example.com
DJANGO_SUPERUSER_PASSWORD=CHANGE-ME-use-strong-password-min-16-chars

# ===== ADMIN URL PATH (Security through Obscurity) =====
# Custom admin URL path - change this to hide your admin panel from bots
# Use a random string: python -c "import secrets; print(secrets.token_urlsafe(16))"
# Example: ADMIN_URL_PATH=xK7mN9pQ2rS5tU8v
# Then access admin at: https://your-domain.com/xK7mN9pQ2rS5tU8v/
ADMIN_URL_PATH=CHANGE-ME-random-string

# ===== CSRF PROTECTION =====
CSRF_TRUSTED_ORIGINS=https://your-domain.example.com

# ===== EMAIL CONFIGURATION =====
# For development (optional - will print to console if not set)
# For production (REQUIRED for password reset emails)

# Gmail SMTP Settings (use App Passwords, not your real password)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-char-app-password

# ===== RESEND API (Alternative email provider) =====
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
DEFAULT_FROM_EMAIL=noreply@your-domain.example.com

# ===== HR APPROVAL EMAIL =====
# Email address to receive HR registration approval requests
HR_APPROVAL_EMAIL=admin@your-domain.example.com

# ===== AWS S3 (Optional - for file storage) =====
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# ===== RATE LIMITING =====
ENABLE_RATE_LIMITING=True
# Trusted proxy IPs (Cloudflare, load balancers) - comma separated
TRUSTED_PROXY_IPS=

# ===== SITE URL =====
# Full URL of your site (used in emails)
SITE_URL=https://your-domain.example.com
